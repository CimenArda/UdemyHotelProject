
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@model List<StaffViewModel>

<table class="table table-bordered">
    <thead>
        <<tr>
            <th>#</th>
            <th>Personel Adı</th>
            <th>Personel Ünvanı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>

         
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.StaffID</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a href="/Staff/DeleteStaff/@item.StaffID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Staff/UpdateStaff/@item.StaffID" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-primary">Detaylar</a></td>
            

        </tr>
        }
    </tbody>
</table>
<a href="/Staff/AddStaff/" class="btn btn-dark">Yeni Personel Girişi</a>


