

@model List<HotelProject.WebUI.Dtos.StaffDto.ResultLast4StaffDto>
<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <img src="@item.SocialMedia1"  width="110" height="110" class="rounded-circle" alt="">
                            <h5 class="mt-3 mb-1">@item.Name</h5>
                            <p class="m-0">@item.Title</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No data available</p>
    }
</div>
